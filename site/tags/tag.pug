---
pagination: 
  data: collections
  size: 1
  alias: tag
  filter: 
    - all
    - plants
permalink: "| /tags/#{tag}/"
---
extends ../../kennel/preamble.pug

block head
block main
  nav
    ol
      li
        a(href="/") Home
      li
        a(href="/tags/") Explore tags
      li
        span ##{tag}
  section
    h1 ##{tag}
    ul
      each plant in collections[tag]
        li
          a(href=plant.data.page.url)
            span #{plant.data.name}
block footer
